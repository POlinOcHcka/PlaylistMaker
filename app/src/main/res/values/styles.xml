<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">fill</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="BoxText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_16</item>
        <item name="android:paddingVertical">@dimen/size_20</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ButtonBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/size_12</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:background">@color/button_white</item>
        <item name="android:src">@drawable/icon_back</item>
    </style>

    <style name="SettingsIconShare">
        <item name="android:background">@color/button_white</item>
        <item name="android:src">@drawable/icon_share</item>
    </style>

    <style name="SettingsIconSupport">
        <item name="android:background">@color/button_white</item>
        <item name="android:src">@drawable/icon_support</item>
    </style>

    <style name="SettingsIconArrow">
        <item name="android:background">@color/button_white</item>
        <item name="android:src">@drawable/icon_arrow</item>
    </style>
    
    <style name="Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_10</item>
        <item name="android:layout_marginStart">@dimen/size_24</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="SettingsSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/icon_gray</item>
        <item name="android:colorForeground">@color/icon_gray_light</item>
    </style>

    <style name="SearchBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:layout_marginTop">@dimen/size_8</item>
        <item name="android:layout_marginHorizontal">@dimen/size_16</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="SearchString">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">@dimen/size_12</item>
        <item name="android:drawablePadding">@dimen/size_10</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">@color/icon_gray</item>
        <item name="android:backgroundTint">@color/background_gray</item>
        <item name="android:importantForAccessibility">no</item>
    </style>
    
    <style name="Clear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableTint">@color/icon_gray</item>
        <item name="android:backgroundTint">@color/background_gray</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">fill</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:src">@drawable/icon_clear</item>
    </style>

    <style name="NameTrackText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TinyText1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="TinyText2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="ButtonTrack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@color/icon_gray</item>
        <item name="android:backgroundTint">@color/background_white</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:gravity">fill</item>
        <item name="android:src">@drawable/icon_arrow</item>
    </style>

    <style name="IconPoint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@color/icon_gray</item>
        <item name="android:backgroundTint">@color/background_white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/icon_point</item>
    </style>

    <style name="Placeholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/background_white</item>
        <item name="android:layout_gravity">top|center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">104dp</item>
    </style>

    <style name="PlaceholderImageNoResults">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/background_white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/placeholder_no_results</item>
    </style>

    <style name="PlaceholderImageServerError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/background_white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/placeholder_server_error</item>
    </style>

    <style name="PlaceholderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_marginTop">@dimen/size_19</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="textViewSearchHistory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_marginTop">@dimen/size_18</item>
        <item name="android:layout_marginBottom">@dimen/size_12</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PlaceholderButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/size_24</item>
        <item name="android:backgroundTint">@color/button_black</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TrackNameText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TrackArtistName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="TrackTime">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextGrayPlayer">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="TextBlackPlayer">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="IconPlay">
        <item name="android:background">@drawable/icon_play</item>
    </style>

    <style name="IconAdd">
        <item name="android:background">@drawable/icon_add</item>
    </style>

    <style name="IconLike">
        <item name="android:background">@drawable/icon_like</item>
    </style>

    <style name="ProgressBar">
        <item name="android:indeterminateTint">@color/progress_bar</item>
        <item name="android:layout_width">@dimen/size_44</item>
        <item name="android:layout_height">@dimen/size_44</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>