<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">fill</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="BoxText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_padding_size</item>
        <item name="android:paddingVertical">@dimen/text_padding_size</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ButtonBack">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:background">@color/button_white</item>
        <item name="android:src">@drawable/icon_back</item>
    </style>

    <style name="SettingsIconShare">
        <item name="android:background">@color/button_white</item>
        <item name="android:src">@drawable/icon_share</item>
    </style>

    <style name="SettingsIconSupport">
        <item name="android:background">@color/button_white</item>
        <item name="android:src">@drawable/icon_support</item>
    </style>

    <style name="SettingsIconArrow">
        <item name="android:background">@color/button_white</item>
        <item name="android:src">@drawable/icon_arrow</item>
    </style>
    
    <style name="Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/ten_padding_size</item>
        <item name="android:layout_marginStart">@dimen/big_padding_size</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="SettingsSwitch">
        <item name="android:thumbTint">@color/icon_gray</item>
        <item name="android:trackTint">@color/icon_gray_light</item>
    </style>

    <style name="SearchBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:layout_marginTop">@dimen/icon_padding_size</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_padding_size</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="SearchString">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">@dimen/small_padding_size</item>
        <item name="android:drawablePadding">@dimen/ten_padding_size</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">@color/icon_gray</item>
        <item name="android:backgroundTint">@color/background_gray</item>
        <item name="android:importantForAccessibility">no</item>
    </style>
    
    <style name="Clear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableTint">@color/icon_gray</item>
        <item name="android:backgroundTint">@color/background_gray</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">fill</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:src">@drawable/icon_clear</item>
    </style>

</resources>