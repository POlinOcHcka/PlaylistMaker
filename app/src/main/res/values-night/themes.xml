<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMakerFinish" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_background_black</item>
        <item name="colorPrimaryVariant">@color/night_button_white</item>
        <item name="colorOnPrimary">@color/night_text_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_background_black</item>
        <item name="colorSecondaryVariant">@color/night_text_black</item>
        <item name="colorOnSecondary">@color/night_text_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/night_background_black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">fill</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/night_text_white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ButtonBack">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:background">@color/night_button_black</item>
        <item name="android:src">@drawable/icon_back_dark_mode</item>
    </style>

    <style name="SettingsIconShare">
        <item name="android:background">@color/night_button_black</item>
        <item name="android:src">@drawable/icon_share_dark_mode</item>
    </style>

    <style name="SettingsIconSupport">
        <item name="android:background">@color/night_button_black</item>
        <item name="android:src">@drawable/icon_support_dark_mode</item>
    </style>

    <style name="SettingsIconArrow">
        <item name="android:background">@color/night_button_black</item>
        <item name="android:src">@drawable/icon_arrow_dark_mode</item>
    </style>

    <style name="Header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_size_10</item>
        <item name="android:layout_marginStart">@dimen/padding_size_24</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/night_text_white</item>
    </style>

    <style name="SettingsSwitch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:thumbTint">@color/night_icon_blue</item>
        <item name="android:trackTint">@color/night_icon_blue_light</item>
    </style>

    <style name="SearchBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_edittext_dark_mode</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:layout_marginTop">@dimen/icon_padding_size</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_size_16</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="SearchString">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">@dimen/padding_size_12</item>
        <item name="android:drawablePadding">@dimen/padding_size_10</item>
        <item name="android:maxHeight">36dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/night_text_black</item>
        <item name="android:textColorHint">@color/night_text_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableTint">@color/night_icon_black</item>
        <item name="android:backgroundTint">@color/night_background_white</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="Clear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableTint">@color/night_icon_black</item>
        <item name="android:backgroundTint">@color/night_background_white</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">fill</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:src">@drawable/icon_clear_dark_mode</item>
    </style>

    <style name="NameTrackText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/night_text_white</item>
    </style>

    <style name="TinyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/night_text_white</item>
    </style>

    <style name="ButtonTrack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@color/night_icon_white</item>
        <item name="android:backgroundTint">@color/night_background_black</item>
        <item name="android:layout_gravity">center|end</item>
        <item name="android:gravity">fill</item>
        <item name="android:src">@drawable/icon_arrow_dark_mode</item>
    </style>

    <style name="IconPoint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@color/night_icon_white</item>
        <item name="android:backgroundTint">@color/night_background_black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/icon_point_dark_mode</item>
    </style>

    <style name="PlaceholderImageNoResults">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/night_background_black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/placeholder_no_results_dark_mode</item>
    </style>

    <style name="PlaceholderImageServerError">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/night_background_black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/placeholder_server_error_dark_mode</item>
    </style>

    <style name="PlaceholderTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/night_text_white</item>
        <item name="android:layout_marginTop">@dimen/text_size_19</item>
        <item name="android:textSize">@dimen/padding_size_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="PlaceholderButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/padding_size_24</item>
        <item name="android:backgroundTint">@color/night_button_white</item>
        <item name="android:textColor">@color/night_text_black</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="textViewSearchHistory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/night_text_white</item>
        <item name="android:layout_marginTop">@dimen/padding_size_18</item>
        <item name="android:layout_marginBottom">@dimen/padding_size_12</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

</resources>