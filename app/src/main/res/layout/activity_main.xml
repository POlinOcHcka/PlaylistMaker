<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/size_12"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_12"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="?attr/colorOnSecondary"
            android:textFontWeight="500"
            android:textSize="@dimen/text_size_22"
            android:textStyle="bold" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/size_16"
        android:paddingTop="@dimen/size_24"
        android:paddingBottom="@dimen/size_28">

        <Button
            android:id="@+id/button_search"
            style="@style/MainButton"
            android:text="@string/text_search"
            app:cornerRadius="@dimen/size_16"

            app:icon="@drawable/icon_search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/size_8"
            app:iconTint="@color/icon_black"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/button_media"
            style="@style/MainButton"
            android:layout_marginVertical="@dimen/size_16"
            android:text="@string/text_media_library"
            app:cornerRadius="@dimen/size_16"

            app:icon="@drawable/icon_media"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/size_8"
            app:iconTint="@color/icon_black"
            tools:ignore="VisualLintButtonSize" />

        <Button
            android:id="@+id/button_settings"
            style="@style/MainButton"
            android:text="@string/text_settings"
            app:cornerRadius="@dimen/size_16"

            app:icon="@drawable/icon_settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/size_8"
            app:iconTint="@color/icon_black"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>

</LinearLayout>