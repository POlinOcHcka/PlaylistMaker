<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/header_padding_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="@dimen/small_padding_size"
            android:layout_marginTop="@dimen/ten_padding_size"
            android:layout_marginBottom="@dimen/small_padding_size"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/big_padding_size"
        android:paddingBottom="@dimen/very_padding_size"
        android:paddingHorizontal="@dimen/medium_padding_size"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_search"
            style="@style/MainButton"
            android:text="@string/text_search"
            app:cornerRadius="@dimen/medium_padding_size"

            app:icon="@drawable/icon_search"
            app:iconGravity="textStart"
            app:iconTint="?attr/colorSecondaryVariant"
            app:iconPadding="@dimen/icon_padding_size" />

        <Button
            android:id="@+id/button_media"
            style="@style/MainButton"
            android:layout_marginVertical="@dimen/medium_padding_size"
            android:text="@string/text_media_library"
            app:cornerRadius="@dimen/medium_padding_size"

            app:icon="@drawable/icon_media"
            app:iconGravity="textStart"
            app:iconTint="?attr/colorSecondaryVariant"
            app:iconPadding="@dimen/icon_padding_size"/>

        <Button
            android:id="@+id/button_settings"
            style="@style/MainButton"
            android:text="@string/text_settings"
            app:cornerRadius="@dimen/medium_padding_size"

            app:icon="@drawable/icon_settings"
            app:iconGravity="textStart"
            app:iconTint="?attr/colorSecondaryVariant"
            app:iconPadding="@dimen/icon_padding_size"/>
    </LinearLayout>

</LinearLayout>